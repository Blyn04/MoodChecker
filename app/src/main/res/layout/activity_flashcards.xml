            <!--                <AutoCompleteTextView-->
            <!--                    android:id="@+id/answertype"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:backgroundTint="@color/white"-->
