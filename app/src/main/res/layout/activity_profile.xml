<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:padding="8dp"
                android:onClick="onBackPressed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit Info"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- ID Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:backgroundTint="#E0E8FF"
            android:clipToOutline="true"
            android:background="@drawable/rounded_rectangle">

            <!-- Profile Picture Placeholder -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:background="#AABBCC"
                android:contentDescription="Profile Picture"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp" />

            <!-- Name, Streak, and Barcode Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Barcode Placeholder -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="#D1D8E0" />

                <!-- Name and Streak Labels -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="NAME"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Enter Name"
                    android:text="mikmik"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="STREAK"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="50"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Gmail EditText -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Gmail"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:hint="Enter Gmail"
            android:text="user@gmail.com"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Color Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Color options -->
                <ImageView
                    android:id="@+id/colorOption1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#A3E4D7"
                    android:layout_margin="8dp"
                    android:contentDescription="Color 1" />

                <ImageView
                    android:id="@+id/colorOption2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#FAD7A0"
                    android:layout_margin="8dp"
                    android:contentDescription="Color 2" />

                <ImageView
                    android:id="@+id/colorOption3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#F5B7B1"
                    android:layout_margin="8dp"
                    android:contentDescription="Color 3" />

                <!-- Add more color options if needed -->

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Avatar Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avatar"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Avatar options -->
                <ImageView
                    android:id="@+id/avatarOption1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F5C6A5"
                    android:layout_margin="8dp"
                    android:contentDescription="Avatar 1" />

                <ImageView
                    android:id="@+id/avatarOption2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ABB2B9"
                    android:layout_margin="8dp"
                    android:contentDescription="Avatar 2" />

                <ImageView
                    android:id="@+id/avatarOption3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F1948A"
                    android:layout_margin="8dp"
                    android:contentDescription="Avatar 3" />

                <!-- Add more avatars if needed -->

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Save Changes Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:backgroundTint="#F5CBA7"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />
    </LinearLayout>
</ScrollView>
