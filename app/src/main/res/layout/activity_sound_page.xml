<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="center"
    tools:context=".SoundPageActivity"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="-4dp">

    <!-- Back Button -->

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:onClick="navigateBack"
        android:padding="8dp"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:justificationMode="inter_word"
        android:text="Choose from soothing lofi sounds for focus, sleep, or study to create the perfect vibe for your session."
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lilita_one"
        android:text="What do you want to listen to now?"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/studyButton"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#F8F8F8"
        android:fontFamily="@font/poppins_bold"
        android:text="Study"
        android:textColor="#333333"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/calmi"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="0.8dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F8F8F8"
        android:fontFamily="@font/poppins_bold"
        android:text="Sleep"
        android:textColor="#333333"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/calmi"
        app:layout_constraintEnd_toEndOf="@+id/studyButton"
        app:layout_constraintTop_toBottomOf="@+id/studyButton"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="0.8dp" />

    <Button
        android:id="@+id/calmButton"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F8F8F8"
        android:fontFamily="@font/poppins_bold"
        android:text="Calm"
        android:textColor="#333333"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/calmi"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/focusButton"
        app:layout_constraintTop_toBottomOf="@+id/focusButton"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="0.8dp" />

    <Button
        android:id="@+id/focusButton"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#F8F8F8"
        android:fontFamily="@font/poppins_bold"
        android:text="Focus"
        android:textColor="#333333"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/focusi"
        app:layout_constraintEnd_toStartOf="@+id/studyButton"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="0.8dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Toggle Sounds"
        android:textColor="#333333"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/calmButton"
        app:layout_constraintTop_toBottomOf="@+id/calmButton" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Enhance your study ambiance by toggling between relaxing rain sounds and cozy coffee shop chatter."
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="79dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:srcCompat="@drawable/coffee" />

    <Switch
        android:id="@+id/coffeeShopSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rain"
        android:textColor="#333333"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/rainSoundSwitch"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/rainSoundSwitch"
        app:layout_constraintTop_toBottomOf="@+id/rainSoundSwitch" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_italic"
        android:text="Relax with soothing rain sounds."
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:srcCompat="@drawable/rain" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Coffee Shop"
        android:textColor="#333333"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/coffeeShopSwitch"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/coffeeShopSwitch"
        app:layout_constraintTop_toBottomOf="@+id/coffeeShopSwitch" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_italic"
        android:text="Enjoy the cozy hum of a coffee shop."
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Switch
        android:id="@+id/rainSoundSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/focusButton"
        app:layout_constraintEnd_toEndOf="@+id/focusButton"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="@+id/focusButton"
        app:layout_constraintTop_toTopOf="@+id/focusButton"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/focusi" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/calmButton"
        app:layout_constraintEnd_toEndOf="@+id/calmButton"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="@+id/calmButton"
        app:layout_constraintTop_toTopOf="@+id/calmButton"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/calmi" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/sleepi" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/studyButton"
        app:layout_constraintEnd_toEndOf="@+id/studyButton"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/studyButton"
        app:layout_constraintTop_toTopOf="@+id/studyButton"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/studyi" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#F4F2EF"
        android:fontFamily="@font/poppins_bold"
        android:text="Stop Music"
        android:textColor="#333333"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/startReviewingButton"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <Button
        android:id="@+id/startReviewingButton"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#F4F2EF"
        android:fontFamily="@font/poppins_bold"
        android:text="Start Reviewing"
        android:textColor="#333333"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

</androidx.constraintlayout.widget.ConstraintLayout>